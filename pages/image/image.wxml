<!-- 1.image的基本使用 -->
<!-- 
  重点：
    1.image组件可以写成单标签，也可以写成双标签
    2.image组件默认有自己的大小；320*240
    3.image组件是一个行内块级元素 
 -->
 <!-- <image/> -->
 
 <!-- 2.src：本地图片、远程图片 -->
 <image src='../../assets/aaa.jpg' />
 <image src='/assets/aaa.jpg' />
 <image src='https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg'/>

 <!-- 补充：相册中的图片 -->
 <button bindtap='handleChooseAlbum'>选中图片</button>
 <image src="{{imagePath}}"></image>

 <!-- 3.bindload: 监听图片加载完成 -->
 <!-- lazy-load: 图片的懒加载 -->
 <view>--------------------------------------------</view>
 <image wx:for="{{10}}" src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"
        bindload="handleImageLoad"
        lazy-load></image>


<!-- 4.show-menu-by-longpress：长按图片出现识别小程序码 -->
<image src="https://res.wx.qq.com/wxdoc/dist/assets/img/0.4cb08bb4.jpg"
      show-menu-by-longpress></image>